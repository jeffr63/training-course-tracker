{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@admin/*": [
        "app/admin/*"
      ],
      "@auth/*": [
        "app/auth/*"
      ],
      "@courses/*": [
        "app/courses/*"
      ],
      "@dashboard/*": [
        "app/courses/*"
      ],
      "@list/*": [
        "app/list/*"
      ],
      "@modals/*": [
        "app/modals/*"
      ],
      "@models/*": [
        "app/models/*"
      ],
      "@menu/*": [
        "app/menu/*"
      ],
      "@shared/*": [
        "app/shared/*"
      ],
      "@services/*": [
        "app/services/*"
      ],
      "@store/*": [
        "app/store/*"
      ],
      "@testing/*": [
        "testing/*"
      ],
      "@env/*": [
        "environments/*"
      ]
    },
    "useDefineForClassFields": false
  },
    "angularCompilerOptions": {
      "strictTemplates": true,
    }
}
