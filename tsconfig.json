{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@app/*": ["app/*"],
      "@admin/*": ["app/admin/*"],
      "@auth/*": ["app/auth/*"],
      "@courses/*": ["app/courses/*"],
      "@shared/*": ["app/shared/*"],
      "@store/*": ["app/store/*"],
      "@testing/*": ["testing/*"],
      "@env/*": ["environments/*"],
     }
  },
    "angularCompilerOptions": {
      "strictTemplates": true,
    }
}
