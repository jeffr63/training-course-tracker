{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@app-admin/*": ["app/admin/*"],
      "@app-admin-paths/*": ["app/admin/paths/*"],
      "@app-admin-sources/*": ["app/admin/sources/*"],
      "@app-admin-users/*": ["app/admin/users/*"],
      "@app-courses/*": ["app/courses/*"],
      "@app-shared/*": ["app/shared/*"],
      "@app-shared-modals/*": ["app/shared/modals/*"],
      "@app-shared-services/*": ["app/shared/services/*"],
    }
  },
    "angularCompilerOptions": {
      "strictTemplates": true,
    }
}
