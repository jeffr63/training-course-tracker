{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@guards/*": [
        "app/shared/guards/*"
      ],
      "@modals/*": [
        "app/shared/modals/*"
      ],
      "@models/*": [
        "app/shared/models/*"
      ],
      "@resolvers/*": [
        "app/shared/resolvers/*"
      ],
      "@shared/*": [
        "app/shared/*"
      ],
      "@services/*": [
        "app/shared/services/*"
      ],
      "@store/*": [
        "app/store/*"
      ]
    },
    "useDefineForClassFields": false
  },
    "angularCompilerOptions": {
      "strictTemplates": true,
    }
}
